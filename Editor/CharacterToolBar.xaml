<UserControl
    x:Class="Editor.CharacterToolBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="34"
    d:DesignWidth="600"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Canvas Name="mainToolBarPanel" Height="22">
        <StackPanel Height="{Binding ElementName=mainToolBarPanel, Path=Height}" Orientation="Horizontal">
            <Button
                x:Name="symbolsButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/symbols.png" />
            </Button>
            <Button
                x:Name="greekCapitalButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/greekcapital.png" />
            </Button>
            <Button
                x:Name="greekSmallButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/greeksmall.png" />
            </Button>
            <Button
                x:Name="arrowsButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/arrows.png" />
            </Button>
        </StackPanel>
    </Canvas>
</UserControl>
