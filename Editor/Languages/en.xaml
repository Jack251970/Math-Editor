<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--  General  -->
    <system:String x:Key="Error">Error</system:String>
    <system:String x:Key="Close">Close</system:String>
    <system:String x:Key="Ok">Ok</system:String>
    <system:String x:Key="Cancel">Cancel</system:String>

    <!--  Editor Mode  -->
    <system:String x:Key="EditorMode_Math">Math</system:String>
    <system:String x:Key="EditorMode_Text">Text</system:String>

    <!--  Font Type  -->
    <system:String x:Key="FontType_SystemDefault">System Default</system:String>

    <!--  Copy Type  -->
    <system:String x:Key="CopyType_Image">Image</system:String>
    <system:String x:Key="CopyType_Latex">Latex</system:String>

    <!--  Unicode Format  -->
    <system:String x:Key="UnicodeFormat_Decimal">Decimal</system:String>
    <system:String x:Key="UnicodeFormat_Octal">Octal</system:String>
    <system:String x:Key="UnicodeFormat_Hexadecimal">Hexadecimal</system:String>

    <!--  About Window  -->
    <system:String x:Key="AboutWindow_Title">About Math Editor</system:String>
    <system:String x:Key="AboutWindow_SourceRepository">Source repository</system:String>
    <system:String x:Key="AboutWindow_IssueReport">Issue report</system:String>
    <system:String x:Key="AboutWindow_SponsorAuthor">Sponsor author</system:String>

    <!--  Codepoint Window  -->
    <system:String x:Key="CodepointWindow_Title">Enter Unicode Value</system:String>
    <system:String x:Key="CodepointWindow_UnicodeValue">Unicode Value:</system:String>
    <system:String x:Key="CodepointWindow_Insert">Insert</system:String>
    <system:String x:Key="CodepointWindow_GivenValueError">The given value is invalid</system:String>
    <system:String x:Key="CodepointWindow_EnteredError">The entered value is invalid</system:String>
    <system:String x:Key="CodepointWindow_NumberFormatError">The number is not in correct format</system:String>

    <!--  Custom Zoom Window  -->
    <system:String x:Key="CustomZoomWindow_Title">Zoom Level</system:String>
    <system:String x:Key="CustomZoomWindow_ZoomPercentageRangeError">Zoom percentage must be between 1 and {0}</system:String>
    <system:String x:Key="CustomZoomWindow_ZoomPercentageFormatError">Zoom percentage must be a number between 1 and {0}</system:String>

    <!--  Main Window  -->
    <system:String x:Key="MainWindow_Untitled">Untitled</system:String>
    <system:String x:Key="MainWindow_File">File</system:String>

    <!--  Report Window  -->
    <system:String x:Key="ReportWindow_AppGotError">App got an error</system:String>
    <system:String x:Key="ReportWindow_PleaseOpenIssue">Please open a new issue in</system:String>
    <system:String x:Key="ReportWindow_UploadLog">1. Upload this log file: {0}</system:String>
    <system:String x:Key="ReportWindow_CopyBelow">2. Copy exception messages below</system:String>

    <!--  Matrix Input Window  -->
    <system:String x:Key="MatrixInputWindow_Title">Input Matrix</system:String>
    <system:String x:Key="MatrixInputWindow_Rows">Rows</system:String>
    <system:String x:Key="MatrixInputWindow_Columns">Columns</system:String>

    <!--  Settings Window  -->
    <system:String x:Key="SettingsWindow_Title">Math Editor Settings</system:String>
    <system:String x:Key="SettingsWindow_Language">Language</system:String>
    <system:String x:Key="SettingsWindow_DefaultMode">Default mode</system:String>
    <system:String x:Key="SettingsWindow_DefaultFont">Default font</system:String>
    <system:String x:Key="SettingsWindow_CopyType">Copy type</system:String>

    <!--  Unicode Selector Window  -->
    <system:String x:Key="UnicodeSelectorWindow_Title">Insert Symbol</system:String>
    <system:String x:Key="UnicodeSelectorWindow_Category">Category:</system:String>
    <system:String x:Key="UnicodeSelectorWindow_RecentlyUsedSymbols">Recently used symbols:</system:String>
    <system:String x:Key="UnicodeSelectorWindow_CharacterCode">Character code:</system:String>

</ResourceDictionary>