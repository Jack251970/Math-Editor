<UserControl
    x:Class="Editor.EquationToolBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="34"
    d:DesignWidth="600"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Canvas Name="mainToolBarPanel" Height="22">
        <StackPanel Height="{Binding ElementName=mainToolBarPanel, Path=Height}" Orientation="Horizontal">
            <Button
                x:Name="bracketsButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/brackets.png" />
            </Button>
            <Button
                x:Name="decoratedEquationButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/decoratedEquation.png" />
            </Button>
            <Button
                x:Name="sumsProductsButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/sumproduct.png" />
            </Button>
            <Button
                x:Name="integralsButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/integrals.png" />
            </Button>
            <Button
                x:Name="subAndSuperButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/subsuper.png" />
            </Button>
            <Button
                x:Name="divAndRootsButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/divroot.png" />
            </Button>
            <Button
                x:Name="arrowEquationButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/arrowEquation.png" />
            </Button>
            <Button
                x:Name="compositeButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/composite.png" />
            </Button>
            <Button
                x:Name="decoratedCharacterButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/decoratedCharacter.png" />
            </Button>
            <Button
                x:Name="matrixButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/matrix.png" />
            </Button>
            <Button
                x:Name="boxButton"
                Click="toolBarButton_Click"
                GotFocus="toolBarButton_GotFocus"
                MouseEnter="toolBarButton_MouseEnter"
                Style="{StaticResource ToolbarButtonStyle}">
                <Image Source="images/mathbuttons/boxes.png" />
            </Button>
        </StackPanel>
    </Canvas>
</UserControl>
