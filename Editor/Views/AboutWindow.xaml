<Window
    x:Class="Editor.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="{DynamicResource AboutWindow_Title}"
    Width="436"
    Height="262"
    ui:TitleBar.Height="36"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow">
    <Grid Name="MainGrid" Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Width="80">
            <Image
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="/images/icon.png" />
        </Grid>
        <TextBlock
            Name="VersionLabel"
            Grid.Row="0"
            Grid.Column="1"
            VerticalAlignment="Center"
            Style="{DynamicResource BodyStrongTextBlockStyle}"
            Text="Math Editor v1.0.0.0" />
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="{Binding ElementName=MainGrid, Path=ActualWidth}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ui:HyperlinkButton
                Grid.Column="0"
                Padding="4"
                Content="{DynamicResource AboutWindow_SourceRepository}"
                NavigateUri="{Binding RepositoryUrl, Mode=OneTime}" />
            <ui:HyperlinkButton
                Grid.Column="1"
                Padding="4"
                HorizontalAlignment="Center"
                Content="{DynamicResource AboutWindow_IssueReport}"
                NavigateUri="{Binding IssuesUrl, Mode=OneTime}" />
            <ui:HyperlinkButton
                Grid.Column="2"
                Padding="4"
                Content="{DynamicResource AboutWindow_SponsorAuthor}"
                NavigateUri="{Binding SponsorUrl, Mode=OneTime}" />
        </Grid>
    </Grid>
</Window>