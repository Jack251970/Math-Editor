<Window
    x:Class="Editor.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="{DynamicResource SettingsWindow_Title}"
    Width="485"
    Height="300"
    d:DataContext="{d:DesignInstance Type=local:SettingsWindowViewModel}"
    ui:TitleBar.Height="36"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid x:Name="MainGrid">
        <ui:ScrollViewerEx Margin="15" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label VerticalContentAlignment="Center" Content="{DynamicResource SettingsWindow_Language}" />
                    <ComboBox
                        Grid.Column="1"
                        Width="150"
                        DisplayMemberPath="Display"
                        ItemsSource="{Binding Languages, Mode=OneTime}"
                        SelectedValue="{Binding Language, Mode=TwoWay}"
                        SelectedValuePath="LanguageCode" />
                </Grid>
                <Grid Margin="0 12 0 0" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label VerticalContentAlignment="Center" Content="{DynamicResource SettingsWindow_DefaultMode}" />
                    <ComboBox
                        Grid.Column="1"
                        Width="150"
                        DisplayMemberPath="Display"
                        ItemsSource="{Binding AllEditModes, Mode=OneTime}"
                        SelectedValue="{Binding Settings.DefaultMode, Mode=TwoWay}"
                        SelectedValuePath="Value" />
                </Grid>
                <Grid Margin="0 12 0 0" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label VerticalContentAlignment="Center" Content="{DynamicResource SettingsWindow_DefaultFont}" />
                    <ComboBox
                        Grid.Column="1"
                        Width="150"
                        DisplayMemberPath="Display"
                        ItemsSource="{Binding AllFontTypes, Mode=OneTime}"
                        SelectedValue="{Binding Settings.DefaultFont, Mode=TwoWay}"
                        SelectedValuePath="Value" />
                </Grid>
                <Grid Margin="0 12 0 0" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label VerticalContentAlignment="Center" Content="{DynamicResource SettingsWindow_CopyType}" />
                    <ComboBox
                        Grid.Column="1"
                        Width="150"
                        DisplayMemberPath="Display"
                        ItemsSource="{Binding AllCopyTypes, Mode=OneTime}"
                        SelectedIndex="0"
                        SelectedValue="{Binding Settings.CopyType, Mode=TwoWay}"
                        SelectedValuePath="Value" />
                </Grid>
            </StackPanel>
        </ui:ScrollViewerEx>
    </Grid>
</Window>
