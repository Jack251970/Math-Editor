<Window
    x:Class="Editor.MatrixInputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="{DynamicResource MatrixInputWindow_Title}"
    Width="378"
    Height="184"
    ui:TitleBar.Height="36"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Window.Resources>
        <local:IntegerNumberFormatter x:Key="IntegerNumberFormatter" />
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="12" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{DynamicResource MatrixInputWindow_Rows}" />
            <ui:NumberBox
                Grid.Column="2"
                Width="100"
                Minimum="1"
                NumberFormatter="{StaticResource IntegerNumberFormatter}"
                Value="{Binding Rows, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{DynamicResource MatrixInputWindow_Columns}" />
            <ui:NumberBox
                Grid.Row="2"
                Grid.Column="2"
                Width="100"
                Minimum="1"
                NumberFormatter="{StaticResource IntegerNumberFormatter}"
                Value="{Binding Columns, Mode=TwoWay}" />
        </Grid>
        <StackPanel
            Grid.Row="1"
            Margin="15"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="70"
                Margin="5 0"
                Click="OkButton_Click"
                Content="{DynamicResource Ok}"
                IsDefault="True" />
            <Button
                Width="70"
                Margin="5 0"
                Click="CancelButton_Click"
                Content="{DynamicResource Cancel}"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
