<Window
    x:Class="Editor.MatrixInputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MatrixInputWindow"
    Width="260"
    Height="136"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Rows"
            Target="{Binding ElementName=rowsUpDown}" />
        <TextBox
            x:Name="rowsUpDown"
            Grid.Row="0"
            Grid.Column="1"
            Width="112"
            Margin="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Text="4"
            ToolTip="Rows" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Columns"
            Target="{Binding ElementName=columnsUpDown}" />
        <TextBox
            x:Name="columnsUpDown"
            Grid.Row="1"
            Grid.Column="1"
            Width="112"
            Margin="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Text="4"
            ToolTip="Columns" />

        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <Button
                Width="112"
                Margin="4"
                Click="cancelButton_Click"
                Content="Cancel"
                IsCancel="True" />
            <Button
                Width="112"
                Margin="4"
                Click="okButton_Click"
                Content="Ok"
                IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
