<Window
    x:Class="Editor.CodepointWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="Enter Unicode Value"
    Width="378"
    Height="184"
    ui:TitleBar.Height="36"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label VerticalContentAlignment="Center" Content="Unicode Value:" />
            <TextBox
                x:Name="numberBox"
                Width="100"
                Margin="5 0 0 0"
                PreviewTextInput="numberBox_PreviewTextInput" />
            <ComboBox
                Name="codeFormatComboBox"
                Width="100"
                Margin="5 0 0 0"
                SelectedIndex="0"
                SelectionChanged="codeFormatComboBox_SelectionChanged">
                <ComboBoxItem Tag="10">Decimal</ComboBoxItem>
                <ComboBoxItem Tag="8">Octal</ComboBoxItem>
                <ComboBoxItem Tag="16">Hexadecimal</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="15"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Name="insertButton"
                Width="70"
                Margin="5 0"
                Click="insertButton_Click"
                FontSize="14"
                IsDefault="True">
                Insert
            </Button>
            <Button
                Name="closeButton"
                Width="70"
                Margin="5 0"
                Click="closeButton_Click"
                FontSize="14">
                Close
            </Button>
        </StackPanel>
    </Grid>
</Window>
